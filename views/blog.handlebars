<section class="card">
  
    <header>{{blog.title}}</header>
    <p>{{blog.description}}</p>
    <p>Posted by {{blog.user.username}}</p>
    <p>Created: {{blog.createdAt}}</p>
       {{#if loggedIn}}
       <section class="row justify-content">
           <section class="col-5">
           <button type="button" class="btn-no-style" data-bs-toggle="modal" data-bs-target="#exampleModal"data-bs-whatever="@mdo">Comment</button>
        </section>

           <section class="col-3">
        <button type="button" class="btn-no-style" data-bs-toggle="modal" data-bs-target="#exampleModal2" data-bs-whatever="@fat">Edit</button>
        </section>
        
        <section class="col-4 blog-list" >
         <button id="delete" class="btn-no-style" data-id="{{blog.id}}">Delete</button>
         </section>
         
         </section>
         {{#each blog.comments as |comment| }}

<p>
  <a class="btn-no-style comment" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapse" >
    {{comment.user.username}} made a comment!
  </a>
  <button class="btn-no-style" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
   
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    {{comment.description}} 
    <div class="commentTime">
      comment created:{{comment.createdAt}}</div>
  
  </div>
</div>

      
         {{/each}}
         <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Comment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="new-comment-form">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Blog</label>
            <h5>{{blog.title}}</h5>
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Comment:</label>
            <textarea class="form-control" id="commentDescription" name="comment-description">{{comment.description}}</textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button onclick="newCommentHandler()" type="click" value="Submit" class="btn btn-primary">Save Comment</button>
      </div>
    </div>
  </div>
</div>
      
      
      {{/if}}
            

</section>

 <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Blog</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="edit-blog-form">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Edit Blog Title</label>
            <textarea id="title"  name="title" rows="2" cols="30">
      {{blog.title}}
   </textarea>
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Edit description</label>
            <textarea class="form-control" id="description" name="description">{{blog.description}}</textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button onclick="editFormHandler()" type="click" value="Submit" class="btn btn-primary">Save Edit</button>
      </div>
    </div>
  </div>
</div>
      
      


 
